{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,    
    "sourceMap": false,
    "noEmit": true,
    "noEmitHelpers": true,
    "strictNullChecks": true,
    "noImplicitAny": true,    
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "hammerjs",
      "node"
    ],
    "baseUrl": ".",
    "paths": {      
      "shared": [ "./src/shared"]
    }
  },
  "exclude": [
    "node_modules",
    "wwwroot",
    "src/**/*.spec.ts",
    "src/**/*.e2e.ts",
    "src/**/*.aot.ts",
    "src/**/**.aot.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  },
  "angularCompilerOptions": {
   "genDir": "./compiled",
   "skipMetadataEmit": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
